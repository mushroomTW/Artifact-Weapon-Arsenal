<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <AbilityDef>
        <defName>Zhurong</defName>
        <label>Zhurong</label>
        <description>Expend a pressurized bioferrite charge to create a massive cone of flame.</description>
        <iconPath>UI/UI_Zhurong_icon</iconPath>
        <aiCanUse>true</aiCanUse>
        <ai_IsIncendiary>true</ai_IsIncendiary>
        <!--<warmupStartSound>FireSpew_Warmup</warmupStartSound>-->
        <warmupStartSound>AWA_Sound_boom_swoosh</warmupStartSound>
        <verbProperties>
            <verbClass>Verb_CastAbility</verbClass>
            <range>18.9</range>
            <warmupTime>0.3</warmupTime>
            <!--<soundCast>FireSpew_Resolve</soundCast>-->
            <targetParams>
                <canTargetLocations>true</canTargetLocations>
            </targetParams>
            <flammabilityAttachFireChanceCurve>
                <points>
                    <li>(0.0, 0.9)</li>
                    <li>(1, 1)</li>
                </points>
            </flammabilityAttachFireChanceCurve>
        </verbProperties>
        <comps>
            <li Class="CompProperties_AbilityFireSpew">
                <range>19.9</range>
                <lineWidthEnd>13</lineWidthEnd>
                <!--<filthDef>Filth_Ash</filthDef>-->
                <damAmount>16</damAmount>
                <canHitFilledCells>true</canHitFilledCells>
            </li>
            <li Class="CompProperties_AbilityBurner">
                <numStreams>40</numStreams>
                <range>24</range>
                <coneSizeDegrees>12</coneSizeDegrees>
                <moteDef>Mote_IncineratorBurst</moteDef>
                <barrelOffsetDistance>6</barrelOffsetDistance>
                <sizeReductionDistanceThreshold>16</sizeReductionDistanceThreshold>
                <lifespanNoise>40</lifespanNoise>
                <rangeNoise>.4</rangeNoise>
                <effecterDef>BurnerUsed_1</effecterDef>
            </li>
        </comps>
    </AbilityDef>

    <AbilityDef ParentName="RoleAuraBuffBase">
        <defName>Purgatory</defName>
        <label>Purgatory</label>
        <description>Add buff for self.</description>
        <iconPath>UI/UI_Purgatory_icon</iconPath>
        <aiCanUse>true</aiCanUse>
        <ai_IsIncendiary>true</ai_IsIncendiary>
        <warmupMoteSocialSymbol>UI/UI_Purgatory_icon</warmupMoteSocialSymbol>
        <!--<warmupStartSound>AWA_Sound_fire_out</warmupStartSound>-->
        <statBases>
            <Ability_Duration>126</Ability_Duration>
            <Ability_EffectRadius>0</Ability_EffectRadius>
        </statBases>
        <cooldownTicksRange>120000</cooldownTicksRange>
        <verbProperties>
            <verbClass>Verb_CastAbility</verbClass>
            <range>5</range>
        </verbProperties>
        <comps>
            <li Class="CompProperties_AbilityGiveHediff">
                <compClass>CompAbilityEffect_GiveHediff</compClass>
                <hediffDef>Purgatory_hediff</hediffDef>
                <onlyApplyToSelf>true</onlyApplyToSelf>
                <replaceExisting>true</replaceExisting>
            </li>

            <li Class="CompProperties_AbilityGiveMentalState">
                <compClass>CompAbilityEffect_GiveMentalState</compClass>
                <soundMale>BerserkTrance_Resolve_Male</soundMale>
                <soundFemale>BerserkTrance_Resolve_Female</soundFemale>
            </li>

            <li Class="CompProperties_AbilityExplosion">
                <damageDef>Flame</damageDef>
                <soundExplode>AWA_Sound_fire_out</soundExplode>
                <damageAmount>0</damageAmount>
                <explosionRadius>5</explosionRadius>
            </li>
        </comps>
    </AbilityDef>

    <AbilityDef>
        <defName>Bilskirnir</defName>
        <label>bilskirnir</label>
        <description>Use differential-pressure skipgates in the atmosphere to generate a localized flashstorm. The storm will strike the area with lightning for some time before dissipating.</description>
        <iconPath>UI/UI_Bilskirnir_icon</iconPath>
        <aiCanUse>true</aiCanUse>
        <ai_IsIncendiary>true</ai_IsIncendiary>
        <!--<writeCombatLog>True</writeCombatLog>-->
        <canUseAoeToGetTargets>False</canUseAoeToGetTargets>
        <statBases>
            <Ability_EffectRadius>13.9</Ability_EffectRadius>
            <Ability_Duration>164</Ability_Duration>
        </statBases>
        <cooldownTicksRange>10000</cooldownTicksRange>
        <verbProperties>
            <verbClass>Verb_CastAbility</verbClass>
            <warmupTime>1</warmupTime>
            <range>19.9</range>
            <!--<useableInVacuum>false</useableInVacuum>-->
            <targetParams>
                <canTargetPawns>False</canTargetPawns>
                <canTargetLocations>True</canTargetLocations>
            </targetParams>
        </verbProperties>
        <comps>
            <li Class="Artifact_Weapon_Arsenal.CompProperties_AbilityBilskirnir">
                <goodwillImpact>-35</goodwillImpact>
            </li>
            <li Class="CompProperties_AbilityFleckOnTarget">
                <fleckDef>FlashstormAreaEffect</fleckDef>
                <sound>Psycast_Skip_Exit</sound>
            </li>
        </comps>
    </AbilityDef>

    <AbilityDef>
        <defName>Thunderbolt</defName>
        <label>thunderbolt</label>
        <description>thunderbolt's description.</description>
        <iconPath>UI/UI_Bilskirnir_icon</iconPath>
        <aiCanUse>true</aiCanUse>
        <ai_IsIncendiary>true</ai_IsIncendiary>
        <statBases>
            <Ability_EffectRadius>1</Ability_EffectRadius>
        </statBases>
        <cooldownTicksRange>720</cooldownTicksRange>
        <verbProperties>
            <verbClass>Verb_CastAbility</verbClass>
            <warmupTime>1</warmupTime>
            <range>29.9</range>
            <targetParams>
                <canTargetPawns>True</canTargetPawns>
                <canTargetLocations>True</canTargetLocations>
            </targetParams>
        </verbProperties>
        <comps>
            <li Class="Artifact_Weapon_Arsenal.CompProperties_AbilityThunderbolt">
                <strikeCount>12</strikeCount>
                <ticksBetweenStrikes>80</ticksBetweenStrikes>
            </li>
        </comps>
    </AbilityDef>
    
</Defs>
