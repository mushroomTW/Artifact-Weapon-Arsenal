<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <HediffDef ParentName="RoleStatBuff">
        <defName>Purgatory_hediff</defName>
        <label>Purgatory</label>
        <description>Buff effect.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <defaultLabelColor>(1, 0.4, 0)</defaultLabelColor>
        <stages>
            <li>
                <statOffsets>
                    <MeleeHitChance>10</MeleeHitChance>
                    <MeleeDodgeChance>10</MeleeDodgeChance>
                    <MoveSpeed>5</MoveSpeed>
                </statOffsets>
                <painFactor>0.1</painFactor>
            </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>7200~7200</disappearsAfterTicks>
                <showRemainingTime>True</showRemainingTime>
            </li>
            <li Class="HediffCompProperties_DisappearsOnDeath" />
            <li Class="Artifact_Weapon_Arsenal.HediffCompProperties_HediffDisplay"/>
        </comps>
        <isBad>false</isBad>
    </HediffDef>

    <HediffDef>
        <defName>AWA_LightningProtection</defName>
        <label>Thor's protection</label>
        <description>Temporarily gain immunity to all damage to withstand the impact of summoning lightning.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <isBad>false</isBad>
        <defaultLabelColor>(0.6, 0.8, 1.0)</defaultLabelColor>
        <stages>
            <li>
                <statFactors>
                    <IncomingDamageFactor>0</IncomingDamageFactor>
                </statFactors>
                <statOffsets>
                    <Flammability>-2.0</Flammability>
                </statOffsets>
            </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>120~120</disappearsAfterTicks>
                <showRemainingTime>false</showRemainingTime>
            </li>
            <li Class="HediffCompProperties_DisappearsOnDeath"/>
        </comps>
    </HediffDef>

</Defs>